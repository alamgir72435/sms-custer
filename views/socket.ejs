<div class="container text-center">
	<button class="btn btn-secondary mt-5" id="send">Send</button>
</div>
<script>
	const socket = io();

	document.getElementById("send").addEventListener("click", () => {
		socket.emit("message", {
			_id: String(Math.random()).split(".")[1],
			phone: "01881818181",
			body: "test message from socket",
		});
	});

	socket.on("all", (data) => {
		console.log(data);
	});

	socket.on("sender", (data) => {
		console.log(data);
	});
</script>
